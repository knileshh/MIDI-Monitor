{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "midi-monitor",
  "version": "0.1.0",
  "identifier": "com.midi-monitor.dev",
  "build": {
    "frontendDist": "../frontend/dist",
    "beforeDevCommand": "powershell -Command \"cd ../frontend; trunk serve --port 3001\"",
    "beforeBuildCommand": "powershell -Command \"cd ../frontend; trunk build --release\""
  },
  "app": {
    "windows": [
      {
        "title": "MIDI Monitor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
